cat cliona_iso2kogClass_2.tab | awk '{if ($2!="") print }' > cliona_iso2kogClass_final.tab

cat symbio_iso2kogClass_2.tab | awk '{if ($2!="") print }' > symbio_iso2kogClass_final.tab


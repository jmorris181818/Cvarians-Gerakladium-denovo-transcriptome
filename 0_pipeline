cat carterio.fasta | perl -pe 's/>(TRINITY_DN(\d+_c\d+_g\d+)\S+)/>$1 gene=isogroup$2/' > carterio_ALL_iso_corrected.fasta

##cliona final 
grep ">" cliona.fasta | perl -pe 's/>(TRINITY_DN(\d+_c\d+_g\d+)\S+)/$1\tisogroup$2/' > cliona_seq2iso_corrected.tab
